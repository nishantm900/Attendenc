    package="com.example.raj.attendenceregister">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/attendance_app_icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />
        <activity android:name=".TeacherLoginActivity" />
        <activity android:name=".StudentLoginActivity" />
        <activity android:name=".TeacherActivity" />
        <activity android:name=".StudentInformationActivity" />
        <activity android:name=".SubjectListActivity" />
        <activity android:name=".AddStudentActivity" />
        <activity android:name=".SelectRollNoActivity" />
        <activity android:name=".AttendenceActivity"></activity>
    </application>

</manifest>